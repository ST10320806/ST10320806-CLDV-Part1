@{
    ViewData["Title"] = "Welcome!";
}

<body style=" background: linear-gradient(#3300ff,#bd00fc ); text-align:center;">
    <h1>Welcome to Mr C's Retailing!</h1>
    <div style="border: 2px solid grey; padding: 20px; margin: auto; display: inline-block; text-align: center; background-color:cornsilk; border-radius: 15px">
        <div style="border: 2px solid black; padding: 20px; margin:auto; display: inline-block; text-align: center; border-radius: 15px; background-color:beige;">
    <p style="">Upload an image into the storage account: </p>
<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <input type="file" name="file" /><br />
        <button type="submit" style="background-color:aqua">Upload Image</button>
</form>
</div>
<br />
<br />
        <div style="border: 2px solid black; padding: 20px; margin:auto; display: inline-block; text-align: center; border-radius: 15px; background-color:beige;">
<p>Add a customer profile to the storage account: </p>
<form asp-action="AddCustomerProfile" method="post">
    <input type="text" name="FirstName" placeholder="First Name" /><br />
    <input type="text" name="LastName" placeholder="Last Name" /><br />
    <input type="email" name="Email" placeholder="Email" /><br />
    <input type="text" name="PhoneNumber" placeholder="Phone Number" /><br />
    <button type="submit" style="background-color:aqua">Add Profile</button>
</form>
    </div>
<br />
<br />
        <div style="border: 2px solid black; padding: 20px; margin:auto; display: inline-block; text-align: center; border-radius: 15px; background-color:beige;">
<p>Process an order to the storage account: </p>
<form asp-action="ProcessOrder" method="post">
    <input type="text" name="orderId" placeholder="Order ID" /><br />
        <button type="submit" style="background-color:aqua">Process Order</button>
</form>
</div>
<br />
<br />
        <div style="border: 2px solid black; padding: 20px; margin:auto; display: inline-block; text-align: center; border-radius: 15px; background-color:beige;">
<p>Upload a contract to the storage account: </p>
<form asp-action="UploadContract" method="post" enctype="multipart/form-data">
    <input type="file" name="file" /><br />
        <button type="submit" style="background-color:aqua">Upload Contract</button>
</form>
</div>
</div>
</body>